generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//// ---------------------
//// USER & AUTH MODELS
//// ---------------------

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?     // REQUIRED
  password      String?
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  accounts      Account[]
  sessions      Session[]

  rooms         RoomMember[]
  messages      Message[]
  passwordResetTokens PasswordResetToken[] 
}

model Account {
  id                 String   @id @default(cuid())
  userId             String
  type               String                // REQUIRED FOR NEXTAUTH
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  expires   DateTime

  user      User     @relation(fields: [userId], references: [id])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  used      Boolean  @default(false)


  user      User     @relation(fields: [userId], references: [id])
}

//// ---------------------
//// CHAT MODELS
//// ---------------------

model Room {
  id          String         @id @default(cuid())
  name        String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  members     RoomMember[]
  messages    Message[]
  whiteboard  Whiteboard?
}

model RoomMember {
  id      String   @id @default(cuid())
  roomId  String
  userId  String

  room    Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
}

model Message {
  id        String   @id @default(cuid())
  roomId    String
  senderId  String
  content   String?
  attachments Json?
  createdAt DateTime @default(now())

  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  sender    User     @relation(fields: [senderId], references: [id])
}

//// ---------------------
//// WHITEBOARD MODELS
//// ---------------------

model Whiteboard {
  id         String               @id @default(cuid())
  roomId     String               @unique
  data       String?              // JSON string of elements
  elements   WhiteboardElement[]
  versions   WhiteboardVersion[]
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt

  room       Room                 @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model WhiteboardElement {
  id         String   @id @default(cuid())
  boardId    String
  type       String   // "path" | "shape" | "text" | "image"
  data       Json
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  board      Whiteboard @relation(fields: [boardId], references: [id], onDelete: Cascade)
}

model WhiteboardVersion {
  id         String   @id @default(cuid())
  boardId    String
  snapshot   Json
  createdAt  DateTime @default(now())

  board      Whiteboard @relation(fields: [boardId], references: [id], onDelete: Cascade)
}